@model Fooditem
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3"></div>
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-black">Delete Fooditem</h2>
        </div>
    </div>
</div>
<div class="card-body p-4">
    <form method="post">
        <input asp-for="FooditemId" hidden />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Fooditem</h2>
                <hr />
            </div>
        </div>
        <div class="form-floating py-2 col-12 ">
            <input asp-for="Name" disabled class="form-control border-0 shadow" />
            <label asp-for="Name" class="ms-2"></label>
        </div>
        <div class="form-floating py-2 col-12 ">
            <input asp-for="Description" disabled class="form-control border-0 shadow" />
            <label asp-for="Description" class="ms-2"></label>
        </div>
        <div class="form-floating py-2 col-12 ">
            <input asp-for="ExpirationDate" disabled class="form-control border-0 shadow" />
            <label asp-for="ExpirationDate" class="ms-2"></label>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Fooditem" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Previous List
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
