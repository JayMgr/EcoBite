@model Fooditem

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Fooditem</h2>
            <hr/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ExpirationDate" class="p-0"></label>
            <input asp-for="ExpirationDate" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-dark form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Fooditem" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Previous List
                </a>
            </div>
        </div>      
    </div>
</form>
